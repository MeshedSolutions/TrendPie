@model TrendPie.Models.User

@{
    ViewBag.Title = "Wallet";
}

<div class="gradient30">
    @using (Html.BeginForm("UpdateWallet", "Profile", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Id)
        <div class="space25"></div>
        <div class="formwrapper whiteBack">
            <div class="walletLabel">PayPal Email</div>
            <div>@Html.TextBoxFor(model => model.PayPalEmail, new { @class = "txtInput", placeholder = "PayPal Email", type = "email" })</div>
            <div class="walletLabel">Amount / Campaign</div>
            <div>@Html.TextBoxFor(model => model.AmountPerCampaign, new { @class = "txtInput", placeholder = "Amount Per Campaign", type = "number" })</div>
        </div>
        <div class="clearme"></div>
        <div class="space10"></div>
        <div class="formwrapper">
            <div><input type="submit" value="Save" class="bttnAddSocial"></div>
        </div>
    }
</div>
